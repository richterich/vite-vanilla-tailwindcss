{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@ui": ["src/shared/ui"],
      "@ui/*": ["src/shared/ui/*"],
      "@utils": ["src/shared/utils"],
      "@utils/*": ["src/shared/utils/*"],
      "@widgets": ["src/widgets"],
      "@widgets/*": ["src/widgets/*"],
      "@entities": ["src/entities"],
      "@entities/*": ["src/entities/*"],
      "@features": ["src/features"],
      "@features/*": ["src/features/*"],
      "@": ["src"],
      "@/*": ["src/*"]
    }
  }
}
